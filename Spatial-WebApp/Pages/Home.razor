@page "/"
@inject IJSRuntime JS

<PageTitle>Home</PageTitle>

<canvas id="unity-canvas" tabindex="-1" style="width: 100%; height: 95vh; background: #231F20"></canvas>

@code{

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        var canvasElement = await JS.InvokeAsync<IJSObjectReference>("document.querySelector", "#unity-canvas");
        await JS.InvokeVoidAsync("buildInstance", [canvasElement]);
    }

}